@page "/discos/{Id:int}"
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Detalle de un Disco</PageTitle>

<h1>Detalle del Disco</h1>

@if (disco == null)
{
    <p><em>Cargando detalle...</em></p>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@disco.Id</dd>

        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@disco.Titulo</dd>

        <dt class="col-sm-2">Año</dt>
        <dd class="col-sm-10">@disco.AnioLanzamiento</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@disco.TipoDisco</dd>

        @* --- SECCIÓN DEL ARTISTA --- *@
        <dt class="col-sm-2">Artista</dt>
        <dd class="col-sm-10">
            @* AQUI EL CAMBIO: Usamos la propiedad plana que manda el DTO *@
            <strong>@disco.NombreArtista</strong>
        </dd>
        @* --------------------------- *@
        
        <dt class="col-sm-2">Duración</dt>
        <dd class="col-sm-10">@disco.DuracionTotal</dd>
    </dl>

    <div class="mb-3">
        <button class="btn btn-warning" @onclick="EditarDisco">Editar</button>
        <button class="btn btn-secondary" @onclick="VolverALista">Volver a la lista</button>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    
    // Usamos el DTO específico para esta vista, no la clase Disco general
    private DiscoDetalleDto? disco; 

    protected override async Task OnInitializedAsync()
    {
        try 
        {
           // El JSON que viene del backend se adaptará a esta clase
           disco = await HttpClient.GetFromJsonAsync<DiscoDetalleDto>($"http://localhost:5126/discos/{Id}");
        }
        catch (Exception ex)
        {
           Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private void VolverALista() => NavigationManager.NavigateTo("/discos");
    private void EditarDisco() => NavigationManager.NavigateTo($"/discos/editar/{Id}");

    // --- DEFINICIÓN DE LA CLASE DTO PARA EL FRONTEND ---
    // Esta clase debe tener las mismas propiedades que tu DiscoDetalleDto del backend
    public class DiscoDetalleDto
    {
        public int Id { get; set; }
        public string Titulo { get; set; } = string.Empty;
        public int AnioLanzamiento { get; set; }
        public string TipoDisco { get; set; } = string.Empty;
        
        // El backend manda "nombreArtista", así que lo recibimos aquí:
        public string NombreArtista { get; set; } = "Desconocido"; 
        
        // El backend manda "duracionTotal", así que lo recibimos aquí:
        public string DuracionTotal { get; set; } = string.Empty;
    }
}